@import url('https://fonts.googleapis.com/css?family=Roboto+Mono|Roboto:400,900');

:root {
	--font: 'Roboto', sans-serif;
	--monofont: 'Roboto Mono', monospace;
	--maincolor: #1d1d1d
}

html, body, #app {
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
	overflow-x: hidden;
}

.header {
	height: 100%;
	max-height: 600px;
	width: 100%;
	background-color: var(--maincolor);
	transition: max-height 250ms cubic-bezier(0.4, 0.0, 0.2, 1);

    h1 {
    	margin: 0;
    	position: relative;
    	top: 50%;
    	left: 50%;
    	transform: translate(-50%, -50%);
    	text-align: center;
    	font-size: 72px;
    	font-weight: 400;
    	font-family: var(--font);
    	background: linear-gradient(135deg, #ff3030 10%, #3030ff 100%);
    	-webkit-background-clip: text;
    	-webkit-text-fill-color: transparent;
    }

}

.content {
	width: 100%;
	padding: 18px 0px;

    .lane {
    	width: 95%;
    	max-width: 935px;
    	position: relative;
    	left: 50%;
    	transform: translateX(-50%);

        #content {
        	display: inline-block;
        	width: 100%;
        	max-width: 100%;
        }

        h1 {
        	margin: 12px 0px;
        	margin-top: 34px;
        	width: 100%;
        	color: var(--maincolor);
        	font-family: var(--font);
        	text-align: center;
        }

        p {
        	width: 70%;
        	font-size: 18px;
        	font-family: var(--font);
        	max-width: 600px;
        	margin-left: auto;
        	margin-right: auto;
        }

        ul {
        	width: 70%;
        	font-size: 18px;
        	font-family: var(--font);
        	max-width: 600px;
        	margin-left: auto;
        	margin-right: auto;
        }

        a {
        	text-decoration: underline;
        	cursor: pointer;
        }

        .code {
        	width: 100%;
        	padding: 18px 24px;
        	background-color: var(--maincolor);
        	border-radius: 5px;
        	width: 70%;
        	position: relative;
        	margin: 12px 0px;
        	margin-left: auto;
        	margin-right: auto;
        	overflow-x: auto;

            p {
            	font-size: 16px;
            	width: 100%;
            	margin: 0;
            	font-family: var(--monofont);
            	color: white;
            	white-space: nowrap;
            	color: #636363;

				&.title {
					font-size: 12px;
					margin-bottom: 12px;
					color: #cacaca;
				}

				.bssexpression {
					color: #623AA2;
				}

				.bsscommand {
					color: #0396FF;
				}

				.score {
					color: #FCCF31;
				}

				.handeler {
					color: #636363;
				}

				.number {
					color: #28C76F;
				}

				.block {
					color: #4C83FF;
				}

				.selector {
					color: #EA5455;
				}

            }

        }

    }

}
