html, body {
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
}

.header {
	width: 100%;
	height: 100%;
	background-color: #ffffff;

	.wrapper {

		position: relative;
		top: 50%;
		transform: translateY(-0%);


		opacity: 1;
		display: block;

		.innerWrapper {
			position: relative;
			display: inline-block;
			left: 50%;
			transform: translateX(-50%);

			h2 {
				display: inline-block;
				text-align: left;
				font-size: 4rem;
				margin: 0;

				width: 100%;

				font-family: 'Montserrat', sans-serif;
				font-weight: 600;
			}

			h1 {
				display: inline-block;
				text-align: center;
				font-size: 7rem;
				margin: 0;

				font-family: 'Montserrat', sans-serif;
				font-weight: 800;

				background: linear-gradient(315deg, #63d471 0%, #233329 74%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}
		}

		animation: fadein cubic-bezier(0.4, 0.0, 0.2, 1) 1000ms forwards;

		@keyframes fadein {
			0% {
				opacity: 0;
				transform: translateY(-0%);
			}

			100% {
				opacity: 1;
				transform: translateY(-50%);
			}
		}
	}
}
