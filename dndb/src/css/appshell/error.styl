// main: index.styl

.error {
	display: none;
	z-index: 15;
	position: fixed;
	width: 100vw;
	height: 100vh;
	top: 0;
	left: 0;
	background-color: white;
	overflow-y: auto;

    .inner {
    	width: 95%;
    	height: 60%;
    	max-width: 935px;

        h1 {
        	width: 98%;
        	position: relative;
        	top: 0.5%;
        	left: 1%;
        	font-size: 2.5em;
        }

        p {
        	width: 98%;
        	position: relative;
        	top: 0.5%;
        	left: 1%;
        	font-size: 2em;
        }

    }

}
