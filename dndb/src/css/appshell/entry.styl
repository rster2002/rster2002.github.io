// main: index.styl

.innerPage {

    lane-width = 95%;
    lane-max-width = 950px;

	width: 100%;
	height: 100%;

    &.scroll {
    	overflow-y: auto;
    	overflow-x: hidden;
    }

     iframe {
    	width: 100%;
    	height: 100%;
    }

    .phb {
    	left: 50%;
    	transform: translate(-50%, 0%);
    	margin-top: 2%;
    	border-radius: 1vh;
    	box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.2);
    }

    .lane {
    	width: lane-width;
    	max-width: lane-max-width;
    	position: relative;
    	top: 56px;
    	left: 50%;
    	transform: translateX(-50%);

        &.fullWidth {
        	width: 100%;
        }

        .entry {
        	width: calc(100% - 16px);
        	padding: 12px 8px;
        	border-radius: 10px;
        	box-shadow: 0 2px 1px -1px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 1px 3px 0 rgba(0,0,0,.12);
        	position: relative;
        	margin: 12px 0px;
        	background-color: white;

            &.nopadding {
            	padding: 0;
            }

            .divider {
            	height: 2px;
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	background-color: rgb(0, 0, 0, .3);
            }

            select {
            	margin: 8px 4px;
            	font-size: 24px;
            	background-color: transparent;
            	outline: 0;
            	border: solid 2px accent-color;
            	border-color: unfocused;
            	border-radius: 4px;
            	color: accent-color;
            	padding: 4px 6px;
            	font-weight: 500;
            	transition: cubic-bezier(0.4, 0.0, 0.2, 1) border-color 250ms;
            	cursor: pointer;

                &:hover {
                	border-color: accent-color;
                }

            }

            button {
            	transition: all 250ms cubic-bezier(0.4, 0.0, 0.2, 1);
            	margin: 8px 4px;
            	font-size: 18px;
            	background-color: no-hover;
            	outline: 0;
            	border: solid 2px;
            	border-color: no-hover;
            	border-radius: 4px;
            	color: accent-color;
            	padding: 4px 8px;
            	font-weight: 500;
            	cursor: pointer;
            	text-transform: lowercase;

                &:hover {
                	border-color: transparent;
                	background-color: hover;
                	/* color: white;
                	background-color: accent-color;
                	transition: all 150ms cubic-bezier(0.4, 0.0, 0.2, 1); */
                }

                &.toggled {
                	color: white;
                	background-color: accent-color;
                	transition: all 150ms cubic-bezier(0.4, 0.0, 0.2, 1);

                    &:hover {
                    	background-color: unfocused;
                    	color: black;
                    	transition: all 150ms cubic-bezier(0.4, 0.0, 0.2, 1);
                    }

                }

                &.border {
                	border-color: unfocused;
                	font-size: 24px;
                }

                &.full {
                	width: 94%;
                	font-size: 24px;
                	position: relative;
                	border-color: unfocused;
                	left: 50%;
                	transform: translate(-50%, 0%);
                	margin: 0px 0px;
                }

                &.danger {
                	color: danger-unfocused;
                	border-color: transparent;
                	transition: all 250ms cubic-bezier(0.4, 0.0, 0.2, 1);

                    &:hover {
                    	background-color: danger;
                    }

                }

                &.fab {
                	position: relative;
                	bottom: -25px;
                	left: 50%;
                	transform: translateX(-50%);
                	border-radius: 50%;
                	background-color: accent-color;
                	margin: 0;
                	border: 0px;
                	margin-bottom: -40px;
                }

            }

            .btn {
            	padding: 0px;
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	display: inline-block;

                button {
                	margin: 8px 0px;
                	margin-right: 8px;
                }

                &.icn button {
                    color: #3d3d3d;
                	float: right;
                }

            }

            h1 {
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	margin: 12px 0px;
            	white-space: nowrap;
            	overflow: hidden;
            	text-overflow: ellipsis;

                &.big {
                	font-size: 46px;
                }

                &.ch {
                	text-align: center;
                }

                &.noOverflow {
                	white-space: pre-wrap;
                	text-overflow: clip;
                }

            }

            h2 {
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	margin: 8px 0px;
            	color: rgba(0, 0, 0, .3);
            	font-size: 18px;
            	font-weight: 400;
            	white-space: nowrap;
            	overflow: hidden;
            	text-overflow: ellipsis;

                &.ch {
                	text-align: center;
                }

            }

            h3 {
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	margin: 12px 0px;
            	margin-top: 24px;
            	white-space: nowrap;
            	overflow: hidden;
            	text-overflow: ellipsis;
            	font-size: 24px;
            	font-weight: 500;
            	color: rgba(0, 0, 0, .7);
            }

            h4, h5, h6 {
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	margin: 8px 0px;
            	color: rgba(0, 0, 0, .3);
            	font-weight: 400;
            	white-space: nowrap;
            	overflow: hidden;
            	text-overflow: ellipsis;
            }

            p {
            	width: 94%;
            	font-family: 'Roboto', sans-serif;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	margin: 8px 0px;
            	color: black;
            	font-size: 18px;
            	font-weight: 400;
            	white-space: pre-wrap !important;
            	text-overflow: clip !important;

                &.overflow {
                	white-space: nowrap;
                	overflow: hidden;
                	text-overflow: ellipsis;
                }

                &.big {
                	font-size: 26px;
                }

            }

            input {
            	width: calc(94% - 16px);
            	position: relative;
            	left: 50%;
            	transform: translate(-50%, 0%);
            	margin: 12px 0px;
            	font-size: 24px;
            	background-color: transparent;
            	outline: 0;
            	border: solid 2px ;
            	border-color: unfocused;
            	border-radius: 4px;
            	color: default-text-color;
            	padding: 4px 6px;
            	font-weight: 500;
            	transition: animation-flow 250ms border-color;

                &:focus {
                	border-color: accent-color;
                }

                &::placeholder {
                	color: accent-color;
                	opacity: 1;
                }

                &::-ms-input-placeholder {
                	color: accent-color;
                }

                &.red {
                	border: danger-unfocused;

                    &::placeholder {
                    	color: danger;
                    	opacity: 1;
                    }

                    &::-ms-input-placeholder {
                    	color: #ff3030;
                    }

                }

            }


            textarea {
            	width: calc(94% - 16px);
            	position: relative;
            	left: 50%;
            	transform: translate(-50%, 0%);
            	margin: 12px 0px;
            	font-size: 18px;
            	background-color: transparent;
            	outline: 0;
            	border: solid 2px;
            	border-color: unfocused;
            	border-radius: 4px;
            	color: black;
            	padding: 4px 6px;
            	font-weight: 500;
            	height: 240px;
            	resize: none;
            	transition: animation-flow 250ms border-color;

                &:focus {
                	border-color: accent-color;
                }

                &::placeholder {
                	color: accent-color;
                	opacity: 1;
                }

                &::-ms-input-placeholder {
                	color: accent-color;
                }

                &.red {
                	border-color: danger-unfocused;

                    &::placeholder {
                    	color: danger;
                    	opacity: 1;
                    }

                    &::-ms-input-placeholder {
                    	color: danger;
                    }

                }

            }

            .listItem {
            	width: calc(95% - 4px);
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);
            	margin: 4px 0px;
            	border-radius: 10px;
            	padding: 12px 8px;
            	display: inline-block;
            	border: 2px solid rgba(0, 0, 0, .1);

                h1 {
                	font-size: 36px;
                	white-space: nowrap;
                	overflow: hidden;
                	text-overflow: ellipsis;
                }

                .shared {
                	cursor: pointer;
                }

                .user {
                	width: 100%;
                	left: 0%;
                	transform: translateX(0%);
                }

            }

            .user {
            	height: 72px;
            	width: 94%;
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);

                img {
                	height: 56px;
                	width: 56px;
                	margin: 8px;
                	float: left;
                	border-radius: 50%;
                }

                h1 {
                	float: left;
                	margin: 0px 8px;
                	width: calc(100% - 88px);
                	left: 0px;
                	top: 50%;
                	transform: translateX(0px) translateY(-50%);
                }

            }

            @import "markdown.styl";

            .tags {
            	width: calc(94%);
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);

                .tag {
                	display: inline-block;
                    padding: 4px 18px;
                    margin: 2px;
                    cursor: pointer;
                    background-color: rgb(235, 235, 235);
                    border-radius: 10px;
                }

                p {
                	display: inline-block;
                    padding: 4px 0px;
                    font-size: 18px;
                    margin: 0;
                    float: left;
                    width: initial;
                    left: 0px;
                    transform: translateX(0px);
                }

                i {
                	margin-left: 4px;
                    transform: translateY(3px);
                    /* float: left; */
                }

            }

            .row {
            	display: inline-block;
            	width: calc(94%);
            	position: relative;
            	left: 50%;
            	transform: translateX(-50%);

                input {
                	width: calc(80%);
                	float: left;
                	border-right: 0px;
                	border-top-right-radius: 0px;
                	border-bottom-right-radius: 0px;
                	left: 0px;
                	transform: translateX(0px);
                	padding-right: 0px;
                	margin-right: 0px;
                }

                button {
                	padding: 0px;
                    height: 41px;
                    width: calc(20% - 7px);
                    float: left;
                    margin: 0px;
                    margin-top: 12px;
                    border-color: rgba(0, 0, 0 ,.1);
                    border-top-left-radius: 0px;
                    border-bottom-left-radius: 0px;
                    border-left: 0px;
                    margin-left: -1px;
                }

                .multiInput {
                	width: calc(100% - 74px);
                	position: relative;
                	left: 50%;
                	transform: translate(-50%, 0%);
                	margin: 12px 0px;
                	background-color: transparent;

                    input {
                    	margin: 0;
                    	width: 100%;
                    	float: left;
                    	position: relative;
                    	left: 0%;
                    	transform: translateX(0%);
                    }

                    &.tennine input {

                        &:nth-of-type(1) {
                            border-radius: 0px;
                            border-top-left-radius: 4px;
                            border-bottom-left-radius: 4px;
                            border-right: 0px;
                            width: calc(10% - 2px);
                        }

                        &:last-child {
                            border-radius: 0px;
                            border-top-right-radius: 4px;
                            border-bottom-right-radius: 4px;
                            border-left: 0px;
                            width: calc(90% - 26px);
                        }

                    }

                    &.fithteen input {

                        &:nth-of-type(1) {
                        	border-radius: 0px;
                        	border-top-left-radius: 4px;
                        	border-bottom-left-radius: 4px;
                        	border-right: 0px;
                        	width: calc(15% - 2px);
                        }

                        &:last-child {
                        	border-radius: 0px;
                        	border-top-right-radius: 4px;
                        	border-bottom-right-radius: 4px;
                        	border-left: 0px;
                        	width: calc(85% - 26px);
                        }

                    }

                }

            }

        }

    }

}
