.overlay {
	width: 80%;
	height: 80%;
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	border-radius: 10px;
	background-color: white;
	display: none;

    &.open {
    	display: block;
    }

    h2, h3 {
    	width: 98%;
    	position: relative;
    	left: 1%;
    	margin: 2px;
    	font-weight: 500;
    }

    .key {
    	color: rgb(135, 135, 135);
    }

}
