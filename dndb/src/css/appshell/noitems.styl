.noItems {
	width: 100%;
	height: 100%;

    .inner {
    	position: relative;
    	top: 50%;
    	left: 50%;
    	transform: translate(-50%, -50%);
    	max-width: 500px;
    	display: inline-block;

        h1 {
        	margin: 0;
            padding: 4px 12px;
            font-size: 24px;
        	font-weight: 500;
        }

        p {
        	margin: 0;
        	padding: 4px 12px;
        	font-size: 16px;
        	color: rgba(0, 0, 0, .8);
        }

    }

}
