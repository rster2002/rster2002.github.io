// main: index.styl

.dialog {
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	z-index: 15;
	background-color: rgba(0, 0, 0, .4);

    .box {
    	width: 80%;
    	max-width: 400px;
    	padding: 12px 8px;
    	padding-bottom: 0px;
    	position: relative;
    	top: 50%;
    	left: 50%;
    	transform: translate(-50%, -50%);
    	background-color: white;
    	border-radius: 4px;
    	box-shadow: 0 11px 15px -7px rgba(0,0,0,.2), 0 24px 38px 3px rgba(0,0,0,.14), 0 9px 46px 8px rgba(0,0,0,.12);

        p {
        	font-size: 18px;
        	margin: 0;
        	padding: 10px 16px;
        	color: #3d3d3d;
        }

        .users {
        	width: 100%;
        	/* display: inline-block; */
        	max-height: 300px;
        	overflow-x: hidden;
        	overflow-y: auto;

            .user {
            	width: 100%;
                padding: 10px 16px;
                display: inline-block;
            	cursor: pointer;

                p {
                	float: left;
                    padding: 15px 16px;
                }

                img {
                	height: 52px;
                	width: 52px;
                	border-radius: 50%;
                	float: left;
                }

                .picked {
                	width: 52px;
                	height: 52px;
                	border-radius: 50%;
                	float: left;
                	background-color: var(--focus);

                    i {
                    	position: relative;
                    	top: 50%;
                    	left: 50%;
                    	transform: translate(-50%, -50%);
                    	color: white;
                    }

                }

            }

        }

        .btn {
        	width: 100%;
        	display: inline-block;

            button {
            	transition: all 250ms cubic-bezier(0.4, 0.0, 0.2, 1);
            	margin: 8px 4px;
            	font-size: 18px;
            	background-color: no-hover;
            	outline: 0;
            	border: solid 2px;
            	border-color: no-hover;
            	border-radius: 4px;
            	color: accent-color;
            	padding: 4px 8px;
            	font-weight: 500;
            	cursor: pointer;
            	text-transform: lowercase;
            	float: right;

                &:hover {
                	border-color: transparent;
                	background-color: hover;
                }

            }

        }

    }

}
