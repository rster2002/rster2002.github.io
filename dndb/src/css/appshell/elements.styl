// main: index.styl

h1, p, input, textarea {
	font-family: font;
}

input, textarea {

    border: 2px solid accent-color;
	background-color: transparent;
	outline: 0;

}

input::placeholder {
    color: accent-color;
    opacity: 1;
}

input::-ms-input-placeholder {
    color: accent-color;
}

// overwrites default wave components
html div.wave.card {
	float: left;
}

html div.wave.card {
	border-radius: 10px;
	background-color: white;
}

html div.wave.card > div.actions button {
	border-radius: 10px;
}

#globalVue {
	width: 100%;
	height: 100%;
}
