// main: index.styl

html, body {
	margin: 0;
	padding: 0;
	overflow: hidden;
	font-family: font;
	height: 100%;
	width: 100%;
	position: fixed;
	top: 0px;
	left: 0px;

    div.wave.menu a {
    	font-size: 2vh;
    }

    .wave.pusher.top {
    	height: 64px;
    	width: 100%;
    }

    .wave.page {
    	height: calc(100% - 64px);
    	width: 100%;
    	overflow-y: auto;
    }

    .wave.bar.top {
    	background-color: white;
    	position: fixed;
    	width: 100vw;
    	height: 64px;
    	z-index: 4;
    	top: 0px;

        &.shadow {
        	box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2);box-shadow:0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2);
        }

        .section {
        	height: 64px;
        	width: 64px;
        	float: left;

            img {
            	top: 50%;
            	left: 50%;
            	transform: translate(-50%, -50%);
            	position: relative;
            	height: 36px;
            	width: 36px;
            	border-radius: 50%;
            }

            button {
            	top: 50%;
            	left: 50%;
            	transform: translate(-50%, -50%);
            	position: relative;
            	height: 48px;
            	width: 48px;
            	border: 0;
            	background-color: transparent;
            	border-radius: 50%;
            	color: white;
            	font-size: 24px;
            	cursor: pointer;
            	outline: 0;

                &:hover {
                	background-color: rgba(235, 235, 235, 0.1);
                }

                i {
                	transform: translate(0%, 10%);
                }

            }

            &.text h1 {
            	font-family: "Roboto", sans-serif;
            	font-size: 1.25rem;
            	line-height: 2rem;
            	font-weight: 500;
            	letter-spacing: .0125em;
            	margin: 0;
            	padding-left: 20px;
            	position: relative;
            	top: 50%;
            	transform: translate(0%, -50%);
            	color: white;
            	text-overflow: ellipsis;
            	white-space: nowrap;
            	overflow: hidden;
            }

        }

    }

    .wave.top.bar > .section.text h1 {
    	color: default-text-color;
    	padding-right: 20px;
    	text-align: center;
    }

    .wave.top.bar > .section button i {
    	color: default-text-color;
    }

}
